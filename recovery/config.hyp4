#select hyp4
dtoverlay=pimhyp3:checkonly

# HyperPixel4 LCD Settings

#hormal display
#dtoverlay=pimhyp4
#framebuffer_width=480
#framebuffer_height=800

#rotated 90 degrees
dtoverlay=pimhyp4:rotate_1
display_lcd_rotate=1
framebuffer_width=800
